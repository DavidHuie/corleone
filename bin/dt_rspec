#!/usr/bin/env ruby

require 'dt'
require 'dt/rspec'

DT.logger.level = Logger::INFO

if ENV['DEBUG']
  DT.logger.level = Logger::DEBUG
end

SERVER_URI = ENV['SERVER_URI'] || 'druby://0.0.0.0:7000'

# start server
collector = DT::Collector::RSpec.new
emitter = DT::Emitter::RSpec.new(ARGV, (ENV['WORKERS'] || 1).to_i)
server = DT::Server.new(emitter, collector, SERVER_URI)
server.start

# run loop
loop { server.alive? ? Kernel.sleep(1) : break }
server.summarize
