#!/usr/bin/env ruby

require 'docker_test'
require 'docker_test/rspec'

DockerTest.logger.level = Logger::INFO

if ENV['DEBUG']
  DockerTest.logger.level = Logger::DEBUG
end

SERVER_URI = ENV['SERVER_URI'] || 'druby://0.0.0.0:7000'

# start server
collector = DockerTest::Collector::RSpec.new
emitter = DockerTest::Emitter::RSpec.new(ARGV, ENV['WORKERS'].to_i || 1)
server = DockerTest::Server.new(emitter, collector, SERVER_URI)
server.start

# run loop
loop { server.alive? ? Kernel.sleep(1) : break }
server.summarize
