#!/usr/bin/env ruby

require 'docker_test'
require 'docker_test/emitter/rspec'

SERVER_URI = ENV['DOCKER_TEST_SERVER_URI'] || 'druby://localhost:7000'

emitter = DockerTest::Emitter::RSpec.new(ARGV)
server = DockerTest::Server.new(emitter, SERVER_URI)
server.start

loop do
  server.alive? ? sleep(1) : exit(0)
end
